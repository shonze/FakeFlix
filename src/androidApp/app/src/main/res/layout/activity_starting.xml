<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/starting">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="106dp">


    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="74dp"
        android:src="@drawable/starting"
        android:text="Fakeflix"
        android:textColor="@color/fakeflix_red"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:src="@drawable/starting"
        android:text="Unlimited movies\nTV shows\nand more\nWatch anywhere\nCancel anytime"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic" />


    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="Sign In"
        android:textColor="@color/white"
        android:backgroundTint="@color/fakeflix_red" />

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Get Started"
        android:textColor="@color/black"
        android:backgroundTint="@color/fakeflix_red" />

</LinearLayout>
</ScrollView>
